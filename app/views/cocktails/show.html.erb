<h1 class="text-center"><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.ingredient.name %>
    <%= dose.description %>
    <%= link_to "Edit", edit_dose_path(dose) %>
    <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?"} %>
  </li>
  <% end %>
</ul>

<br>

<%= render 'doses/form' %>




