<h1 class="text-center">My list of cocktails</h1>
<% @cocktails.each do |cocktail| %>
  <h2><%= cocktail.name %></h2>
  <%= link_to "Details", cocktail %>
  <%= link_to "Edit", edit_cocktail_path(cocktail) %>
  <%= link_to "Delete", cocktail, method: :delete, data: { confirm: "Are you sure?" } %>
  <br>
<% end %>
<br>
<br>

<%= link_to "Create a new cocktail", new_cocktail_path %>
